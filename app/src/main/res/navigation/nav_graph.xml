<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph.xml"
    app:startDestination="@id/businessFormFragment">

    <fragment
        android:id="@+id/businessFormFragment"
        android:name="sk.stu.fei.appmobv.BusinessFormFragment"
        android:label="fragment_business_form"
        tools:layout="@layout/fragment_business_form">
        <action
            android:id="@+id/action_businessFormFragment_to_businessFragment"
            app:destination="@id/businessFragment" />
    </fragment>

    <fragment
        android:id="@+id/businessFragment"
        android:name="sk.stu.fei.appmobv.BusinessFragment"
        android:label="fragment_business"
        tools:layout="@layout/fragment_business">

        <argument
            android:name="name_input"
            app:argType="string" />
        <argument
            android:name="business_name_input"
            app:argType="string" />
        <argument
            android:name="business_latitude_input"
            app:argType="string" />
        <argument
            android:name="business_altitude_input"
            app:argType="string" />
    </fragment>
</navigation>